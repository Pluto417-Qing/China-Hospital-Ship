/* pages/registerAgreement/registerAgreement.wxss */
.agreement-container {
  background: #f7f8fa;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 32rpx;
}

.agreement-header {
  width: 100%;
  padding: 48rpx 0 24rpx 0;
  text-align: center;
}

.agreement-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #3bcde7;
  letter-spacing: 2rpx;
}

.agreement-content {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 24rpx rgba(59,205,231,0.08);
  padding: 32rpx;
  width: 100%;
  max-width: 700rpx;
  flex: 1;
  overflow: hidden;
}

.agreement-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #222;
  margin-bottom: 12rpx;
  display: block;
}

.section-text {
  font-size: 26rpx;
  color: #555;
  line-height: 1.0;
  white-space: pre-line;
}

.agreement-footer {
  width: 100%;
  padding: 32rpx 0 48rpx 0;
  display: flex;
  justify-content: center;
}

.agree-btn {
  background: linear-gradient(90deg, #3bcde7 0%, #6bb392 100%);
  color: #fff;
  font-size: 32rpx;
  border-radius: 32rpx;
  padding: 18rpx 64rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(59,205,231,0.12);
}