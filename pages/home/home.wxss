/* 线下活动通知 */
.activities {
  width: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  color: white;
  padding: 8px 20px;
  padding-left: 50px;
  font-size: 14px;
  min-height: 10px;
}

/* 分类导航样式 */
.category-container {
  width: 100%;
  display: flex;
  justify-content: space-around;
  padding: 15px 0px;
  background-color: #ebdfb3;
}

.category-item {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  border-radius: 50px;

  display: flex;      
  justify-content: center; 
  align-items: center;  
}

.category-name {
  font-family: monospace;
  font-size: 14px;
  font-weight: 600;
  color: white;
}

/* 文章区域样式 */
.article-section {
  width: 100%;
  min-height: 170px;
  background-color: white;
  padding: 10px;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 10px 10px;
  border-bottom: 1px solid #eee;
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  color: white;
}

.section-more {
  color: white;
  font-size: 14px;
}

.article-list {
  padding: 10px 0;
}

/* 视频区域样式 */
.video-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  gap: 24rpx;
  padding: 3%;

  width: 100%;
}

.video-list video {
  flex: 0 0 45%;      
  height: 250%;
  margin-bottom: 10rpx;
  box-sizing: border-box;
}