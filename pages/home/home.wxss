.banner-swiper {
  height: 340rpx;
  width: 92vw;
  margin: 32rpx auto 0 auto;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.12);
  overflow: hidden;
}

.calligraphy {
  width: 92vw;
  height: 180rpx;
  margin: 32rpx auto 0 auto;
  border-radius: 12rpx;
  display: block;
}

.divider {
  width: 90vw;
  height: 2rpx;
  background: #e0e0e0;
  margin: 0 auto 24rpx auto;
}

.activities {
  width: 92vw;
  margin: 18rpx auto;
  background: rgb(204, 202, 202);
  color: #fff;
  padding: 16rpx 20rpx;
  font-size: 28rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
  display: flex;
}
.activities::before {
  content: "ðŸ“¢";
  margin-right: 10rpx;
}

.article-section {
  width: 90vw;
  min-height: 40vw;
  padding: 18px 14px 14px 14px;
  margin: 24rpx auto 0 auto;
  border-radius: 18rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  border-left: 8rpx solid white;
  padding-left: 18rpx;
}

.section-more {
  color: gray;
  font-size: 28rpx;
  background: #f0f7ff;
  border-radius: 16rpx;
  padding: 2rpx 18rpx;
}

.video-card {
  display: flex;
  align-items: center;
  margin-bottom: 18rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  background: #f9f9f9;
  overflow: hidden;
  padding: 10rpx;
}

.video-img {
  width: 120rpx;
  height: 90rpx;
  border-radius: 8rpx;
  margin-right: 18rpx;
  background: #eee;
}

.video-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #222;
}