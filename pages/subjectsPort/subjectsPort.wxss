/* pages/subjectsPort/subjectsPort.wxss */
.subject-nav {
  display: flex;
  flex-direction: row;
  white-space: nowrap;
  background: #fff;
  padding: 16rpx 0;
  border-bottom: 1px solid #eee;
  overflow-x: auto;
}

.subject-item {
  display: inline-block;
  padding: 12rpx 32rpx;
  margin: 0 8rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 32rpx;
  background: #f5f5f5;
  transition: background 0.2s, color 0.2s;
}

.subject-item.active {
  background: #3bcde7;
  color: #fff;
  font-weight: bold;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 10px 10px;
  border-bottom: 1px solid #eee;
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  color: black;
}