/* components/article/article.wxss */

.article-card {
  display: flex;
  width: 97%;
  margin-left: auto;
  margin-right: auto;
  align-items: center;
  margin-bottom: 18rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  background: #f9f9f9;
  overflow: hidden;
  padding: 15rpx;
}

.article-img {
  width: 250rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-right: 18rpx;
  margin-left: 20rpx;
  background: #eee;
  border-radius: 10px;
}

.article-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
}

.article-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #222;
}

.article-date {
  font-size: 22rpx;
  color: #888;
  margin-top: 30rpx;
  margin-left: 13rpx;
}
