.video-card {
  background: rgb(219, 219, 219);
  border-radius: 18rpx;
  box-shadow: 0 4rpx 16rpx rgba(59,130,246,0.08);
  overflow: hidden;
  transition: box-shadow 0.2s;
  cursor: pointer;
}
.video-card:active {
  box-shadow: 0 8rpx 32rpx rgba(59,130,246,0.16);
}

.video-thumb-wrapper {
  position: relative;
  width: 100%;
  aspect-ratio: 16/9;
  background: #e2e8f0;
}

.video-thumb {
  width: 100%;
  height: 100%;
  display: block;
}

.video-play-icon {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  font-size: 56rpx;
  color: rgba(255,255,255,0.85);
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.3);
  pointer-events: none;
}

.video-info {
  padding: 20rpx 24rpx 16rpx 24rpx;
}

.video-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.video-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #64748b;
}